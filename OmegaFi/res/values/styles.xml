<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>
    <!-- Application theme. -->
    <style name="LoginFormContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:paddingTop">@dimen/padding_top_form</item>
        <item name="android:paddingLeft">@dimen/padding_top_form</item>
        <item name="android:paddingRight">@dimen/padding_top_form</item>
        <item name="android:paddingBottom">@dimen/padding_bottom_form</item>
        <item name="android:layout_marginTop">@dimen/margin_top_form</item>
    </style>
    
    <style name="ContentLoginForm">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">@dimen/margin_sides_content_login</item>
        <item name="android:layout_marginLeft">@dimen/margin_sides_content_login</item>
        <item name="android:orientation">vertical</item>
    </style>
    <style name="MenuSlidingStyle">
        
    </style>
    <style name="EditTextLogin">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/edit_login</item>
        <item name="android:textColor">@android:color/black</item>
        <!-- <item name="android:fontFamily"></item> -->
        <item name="android:background">@drawable/white_input</item>
        <item name="android:padding">@dimen/edit_padding</item>
    </style>
    <style name="EditTextLoginNormal">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_15sp</item>
        <item name="android:textColor">@android:color/black</item>
        <!-- <item name="android:fontFamily"></item> -->
        <item name="android:background">@drawable/white_input</item>
        <item name="android:padding">@dimen/button_padding</item>
    </style>
    <style name="ButtonOmega">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/boton_style</item>
        <item name="android:textSize">@dimen/edit_login</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:paddingTop">@dimen/padding_6dp_buttom_omega</item>
        <item name="android:paddingBottom">@dimen/padding_6dp_buttom_omega</item>
        <item name="android:paddingRight">@dimen/padding_6dp_buttom_omega</item>
        <item name="android:paddingLeft">@dimen/padding_6dp_buttom_omega</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="ButtonOmegaMedium">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/boton_style</item>
        <item name="android:textSize">@dimen/text_14sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:padding">6dp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="ButtonOmegaWhite">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:textSize">@dimen/edit_login</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:padding">@dimen/padding_6dp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>
    <style name="ButtonOmegaSmall">
        <item name="android:background">@drawable/boton_style</item>
        <item name="android:textSize">@dimen/text_10sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/text_10sp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="ButtonOmegaSmallRed">
        <item name="android:background">@color/red_wine</item>
        <item name="android:textSize">@dimen/text_10sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    
    <style name="LinearContentStyle">
        <item name="android:background">@android:color/darker_gray</item>
        <item name="android:padding">8dp</item>
    </style>
    
    <style name="button_social">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:background">@drawable/boton_style</item>
    </style>
    
    <style name="SectionOmegaFi">
        <item name="android:background">@android:color/white</item>
    </style>
    
    <style name="BackgroundLoginScreen">
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:background">@drawable/background_login</item>
    </style>
    
    <style name="BackgroundLoginForm">
        <item name="android:background">@android:color/white</item>
        <item name="android:padding">10dp</item>
    </style>
    <style name="BackgroundActivity">
        <item name="android:background">@color/gray_background</item>
    </style>
    <style name="LinearContentAll">
        <item name="android:padding">@dimen/padding_8dp</item>
    </style>
	
	<style name="Theme.OmegaFiTheme" parent="Theme.Sherlock.Light">
	    <item name="actionBarStyle">@style/Widget.MyTheme.ActionBar</item>
    	<item name="android:actionBarStyle">@style/Widget.MyTheme.ActionBar</item>        
    </style>
    <style name="Widget.MyTheme.ActionBar" parent="Widget.Sherlock.ActionBar">
	    <item name="android:background">@android:color/white</item>
	    <item name="background">@android:color/white</item>
	</style>
</resources>