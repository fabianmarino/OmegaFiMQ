<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearContentNewsEvents"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/padding_8dp"
    android:paddingTop="@dimen/padding_5dp"
    android:paddingRight="@dimen/padding_5dp"
    android:paddingBottom="@dimen/padding_5dp"
    android:orientation="vertical" >
    <TextView android:id="@+id/titleEventNewOmegaFi"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_newevent_title_omegafi"
        android:inputType="textNoSuggestions|textMultiLine"
        android:singleLine="false"
        android:textColor="@android:color/black"
        android:text="Title Event or New"/>
    <TextView android:id="@+id/dateEventNewOmegaFi"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/darker_gray"
        android:textSize="@dimen/text_date_newevent_title_omegafi"
       	android:text="September 29, 2013"
       	android:inputType="textNoSuggestions|textMultiLine"
        android:singleLine="false"/>
    <TextView android:id="@+id/descriptionNewOrEvent"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_10dp"
        android:textColor="@android:color/darker_gray"
        android:inputType="textNoSuggestions|textMultiLine|textCapCharacters"
        android:singleLine="false"
        android:textSize="@dimen/text_content_newevent_title_omegafi"
        />
</LinearLayout>