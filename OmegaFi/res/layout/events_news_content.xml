<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearContentNewsEvents"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/padding_5dp"
    android:orientation="vertical" >
    <TextView android:id="@+id/titleEventNewOmegaFi"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_newevent_title_omegafi"
        android:inputType="textMultiLine"
        android:textColor="@android:color/black"
        android:text="Title Event or New"/>
    <TextView android:id="@+id/dateEventNewOmegaFi"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:textSize="@dimen/text_date_newevent_title_omegafi"
       	android:text="September 29, 2013"/>
    <TextView android:id="@+id/descriptionNewOrEvent"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:inputType="textMultiLine|textCapCharacters"
        android:textSize="@dimen/text_content_newevent_title_omegafi"
        />
</LinearLayout>