<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="6dp"
    android:id="@+id/layout_root_image"
    android:orientation="vertical" >
    <Button android:id="@+id/buttonTakePhoto"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="Take Photo"
        style="@style/ButtonOmega"/>
    <Button android:id="@+id/buttonChooseFromLibrary"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:layout_marginTop="6dp"
        android:text="Choose From Library"
        style="@style/ButtonOmega"/>
    <View
	    android:layout_width="fill_parent"
	    android:layout_height="1dp"
	    android:layout_marginTop="10dp"
	    android:layout_marginBottom="6dp"
	    android:background="@android:color/darker_gray"/>
    <Button android:id="@+id/buttonCancelImage"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:layout_marginTop="5dp"
       	style="@style/ButtonOmega"
        />
</LinearLayout>