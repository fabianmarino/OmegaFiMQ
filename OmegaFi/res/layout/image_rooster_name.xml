<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:padding="@dimen/padding_6dp"
    android:orientation="vertical" >
    <LinearLayout
        android:id="@+id/linearPhotoRooster"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/white"
	    android:padding="@dimen/padding_5dp">
	    <ImageView
	        android:id="@+id/imageRoosterGalery"
	        android:layout_width="@dimen/width_image_chapter"
	        android:layout_height="@dimen/width_image_chapter"
	        android:adjustViewBounds="true"
	        android:scaleType="centerCrop"
	        android:src="@drawable/photo_member"
	        android:background="@android:color/white"
	        android:contentDescription="Member Rooster Photo"/>
    </LinearLayout>
    <TextView
        android:id="@+id/nameRoosterGalery" 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="Title Name"/>
    <TextView
        android:id="@+id/typeRoosterGalery" 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="Type Name"/>
</LinearLayout>
