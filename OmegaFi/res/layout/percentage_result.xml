<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical" >
    <LinearLayout android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="left">
	    <TextView android:id="@+id/textQuestionResult"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:gravity="left"
	        android:text="Lorem ipsum dolor sit amet, consectetur?"
	        android:textSize="@dimen/text_12sp_row_info"
	     />
	    <LinearLayout android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal">
		    <LinearLayout 
		        android:id="@+id/contentPercentageBar"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
				android:orientation="horizontal"
				android:layout_marginBottom="10dp"
				android:background="@drawable/poll_bar_content"     
		        >
		        <View android:id="@+id/percentageBarResult"
		            android:layout_width="200dp"
		            android:layout_height="@dimen/height_bar_poll"
		            android:background="@android:color/darker_gray"/>
		    </LinearLayout>
		    <TextView android:id="@+id/numberPercentageResult"
	            android:layout_width="wrap_content"
	            android:layout_marginLeft="@dimen/padding_3dp"
	            android:layout_height="wrap_content"
	            android:textColor="@android:color/black"
	            android:text="37%"/>
	    </LinearLayout>
	</LinearLayout>
</LinearLayout>