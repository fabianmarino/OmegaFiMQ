<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:secom="http://schemas.android.com/apk/res/com.appsolution.omegafi"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/BackgroundActivity"
    tools:context=".OpenRequestActivity" >
	<LinearLayout android:id="@+id/linearContentOpenRequest"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    style="@style/LinearContentAll"
	    android:orientation="vertical">
	    <com.appsolution.layouts.SectionOmegaFi
	        android:id="@+id/sectionContactInformation"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        secom:show_arrow="false"
	        secom:title_section="Contact Information" />
	    <com.appsolution.layouts.SectionOmegaFi
	        android:id="@+id/sectionContactRequest"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="7dp"
	        android:layout_marginBottom="7dp"
	        secom:show_arrow="false"
	        secom:title_section="Request"
	        />
	    <Button android:id="@+id/buttonSendRequest"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:text="Send"
	        android:onClick="sendRequestContact"
	        style="@style/ButtonOmega"
	        />
	</LinearLayout>
</ScrollView>