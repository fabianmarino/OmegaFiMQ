<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:secom="http://schemas.android.com/apk/res/com.appsolution.omegafi"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/BackgroundActivity"
    tools:context=".OfficerMemberDetailActivity">
	<LinearLayout 
	    android:id="@+id/linearOfficerMemberDetail"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    style="@style/LinearContentAll"
	    android:orientation="vertical">
	    <com.appsolution.layouts.ImageMemberTemplate
	        android:id="@+id/imageMemberHeader"
	       	android:layout_width="fill_parent"
	       	android:layout_height="wrap_content"
	        />
	    <com.appsolution.layouts.SectionOmegaFi
	        android:id="@+id/sectionOMContact"
	        android:layout_width="fill_parent"
	        android:layout_marginTop="5dp"
	        android:layout_height="wrap_content"
	        secom:put_border_title="false"
	        secom:show_arrow="false"
	        secom:title_section="Contact"
	        secom:background_color_section="@android:color/transparent"
	        secom:padding_title_left="0dp"/>
	    <com.appsolution.layouts.SectionOmegaFi
	        android:id="@+id/sectionOMEmail"
	        android:layout_width="fill_parent"
	        android:layout_marginTop="5dp"
	        android:layout_height="wrap_content"
	        secom:put_border_title="false"
	        secom:show_arrow="false"
	        secom:title_section="Email"
	        secom:padding_title_left="0dp"
	        secom:background_color_section="@android:color/transparent"/>
	    <com.appsolution.layouts.SectionOmegaFi
	        android:id="@+id/sectionOMAddress"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="5dp"
	        secom:put_border_title="false"
	        secom:show_arrow="false"
	        secom:padding_title_left="0dp"
	        secom:title_section="Address"
	        secom:background_color_section="@android:color/transparent"/>
	</LinearLayout>
</ScrollView>