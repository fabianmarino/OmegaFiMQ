<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:secom="http://schemas.android.com/apk/res/com.appsolution.omegafi"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/BackgroundLoginScreen"
    android:orientation="vertical"
    tools:context=".SplashOmegaFiActivity" >
    <LinearLayout style="@style/ContentLoginForm"
            >
    <LinearLayout android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        style="@style/LoginFormContainer">
	    <com.appsolution.layouts.HeaderOmegaFi
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"/>
	    <LinearLayout
	        android:orientation="horizontal"
	        android:gravity="center_horizontal"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content">
	        <QuickContactBadge android:id="@+id/photoProfileSplash"
	            android:layout_width="@dimen/photo_size"
	            android:layout_height="@dimen/photo_size"
	            android:layout_marginRight="6dp"
	            />
	        <LinearLayout android:orientation="vertical"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content">
			    <TextView android:id="@+id/textHelloUser"
			        android:layout_width="fill_parent"
			        android:layout_height="wrap_content"
			        android:text="Hello Winston"
			        android:textSize="@dimen/text_large"
			        />
			    <TextView android:id="@+id/textWelcomeUser"
			        android:layout_width="fill_parent"
			        android:layout_height="wrap_content"
			        android:layout_marginTop="5dp"
			        android:text="Welcome to my OmegaFi"
			        android:textSize="@dimen/text_medium"
			        android:textColor="@android:color/darker_gray"
			        />
		    </LinearLayout>
	    </LinearLayout>
    </LinearLayout>
    <LinearLayout android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/jagged"></LinearLayout>
    </LinearLayout>
    <LinearLayout android:id="@+id/contentBarSplash"
	        android:layout_width="@dimen/circle_chargin_size"
	        android:layout_height="@dimen/circle_chargin_size"
	        android:layout_marginTop="@dimen/margin_top_circle_charging"
	        android:gravity="center"
	        android:layout_gravity="center_horizontal"
	        android:orientation="vertical"
	        android:background="@drawable/circle_blue">
	       	<TextView android:id="@+id/percentajeLoading"
	       	    android:layout_width="wrap_content"
	       	    android:layout_height="wrap_content"
	       	    android:layout_gravity="center_horizontal"
	       	    android:textSize="@dimen/text_x_large"
	       	    android:textColor="@android:color/white"
	       	    android:text="0%"
	       	    />
	       	<View android:layout_width="@dimen/large_line_circle"
	       	    android:layout_height="3dp"
	       	    android:background="@android:color/white"/>
	       	<TextView android:layout_width="wrap_content"
	       	    android:layout_height="wrap_content"
	       	    android:layout_gravity="center_horizontal"
	       	    android:text="Loading"
	       	    android:textColor="@android:color/white"
	       	    android:textSize="@dimen/text_small_loading"/>
		</LinearLayout>
</LinearLayout>