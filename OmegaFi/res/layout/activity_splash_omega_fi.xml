<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:secom="http://schemas.android.com/apk/res/com.appsolution.omegafi"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/BackgroundLoginScreen"
    android:orientation="vertical"
    tools:context=".SplashOmegaFiActivity" >
    <LinearLayout android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        style="@style/LoginFormContainer"
        android:layout_marginBottom="50dp">
	    <com.appsolution.layouts.HeaderOmegaFi
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"/>
	    <LinearLayout
	        android:orientation="horizontal"
	        android:gravity="center_horizontal"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content">
	        <QuickContactBadge android:id="@+id/photoProfileSplash"
	            android:layout_width="100dp"
	            android:layout_height="100dp"
	            android:layout_marginRight="10dp"
	            android:src="@drawable/user_icon"/>
	        <LinearLayout android:orientation="vertical"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content">
			    <TextView android:id="@+id/textHelloUser"
			        android:layout_width="fill_parent"
			        android:layout_height="wrap_content"
			        android:text="Hello Winston"
			        android:textSize="30sp"
			        />
			    <TextView android:id="@+id/textWelcomeUser"
			        android:layout_width="fill_parent"
			        android:layout_height="wrap_content"
			        android:layout_marginTop="5dp"
			        android:text="Welcome to my OmegaFi"
			        android:textSize="20sp"
			        android:textColor="@android:color/darker_gray"
			        />
		    </LinearLayout>
	    </LinearLayout>
    </LinearLayout>
    <LinearLayout android:id="@+id/contentBarSplash"
	        android:layout_width="150dp"
	        android:layout_height="150dp"
	        android:layout_marginTop="10dp"
	        android:gravity="center"
	        android:layout_gravity="center_horizontal"
	        android:orientation="vertical"
	        android:background="@drawable/circle_blue">
	       	<TextView android:id="@+id/percentajeLoading"
	       	    android:layout_width="wrap_content"
	       	    android:layout_height="wrap_content"
	       	    android:layout_gravity="center_horizontal"
	       	    android:textSize="40sp"
	       	    android:textColor="@android:color/white"
	       	    android:text="20%"
	       	    />
	       	<View android:layout_width="50dp"
	       	    android:layout_height="3dp"
	       	    android:background="@android:color/white"/>
	       	<TextView android:layout_width="wrap_content"
	       	    android:layout_height="wrap_content"
	       	    android:layout_gravity="center_horizontal"
	       	    android:text="Loading"
	       	    android:textColor="@android:color/white"
	       	    android:textSize="20sp"/>
		</LinearLayout>
</LinearLayout>