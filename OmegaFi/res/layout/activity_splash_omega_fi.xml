<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:secom="http://schemas.android.com/apk/res/com.appsolution.omegafi"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:padding="6dp"
    android:orientation="vertical"
    tools:context=".SplashOmegaFiActivity" >
    
    <com.appsolution.layouts.HeaderOmegaFi
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"/>
    <TextView android:id="@+id/textHelloUser"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Hello Winston"
        android:textSize="30sp"
        android:textColor="@android:color/darker_gray"/>
    <TextView android:id="@+id/textWelcomeUser"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Welcome to my OmegaFi"
        android:textSize="20sp"
        />
    <LinearLayout android:id="@+id/contentBarSplash"
        android:layout_width="fill_parent"
        android:layout_height="5dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/darker_gray">
        <View android:id="@+id/barSplash"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:background="@android:color/black"/>
    </LinearLayout>
</LinearLayout>