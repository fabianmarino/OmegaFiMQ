<?xml version="1.0" encoding="utf-8"?>
<ViewSwitcher xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/pollSwitcher"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    >
	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="vertical" >
	    <LinearLayout android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:paddingLeft="2px"
	        android:paddingRight="2px"
	        android:background="@drawable/background_trans_white_border_sides"
	        android:orientation="vertical">
		    <TextView android:id="@+id/titleQuestionPoll"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:padding="@dimen/padding_5dp"
		        android:text="Lorem ipsum dolor sit amet, consectetur adipisicing?"
		        android:textColor="@android:color/black"
		        android:background="@android:color/white"
		        android:inputType="textMultiLine"
		        android:textSize="@dimen/text_question_poll"/>
		    
		    <View android:layout_width="fill_parent"
		            android:layout_height="@dimen/padding_10dp"
		            android:background="@drawable/jagged"/>
	    </LinearLayout>
	    <LinearLayout 
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:orientation="vertical"
	        android:paddingTop="@dimen/padding_5dp"
	        android:paddingBottom="@dimen/padding_5dp"
	        android:paddingLeft="@dimen/padding_12dp"
	        android:paddingRight="0dp" >
	        <LinearLayout 
	            android:id="@+id/contentAnswersPoll"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:orientation="vertical"
	            android:layout_marginLeft="8dp"
	            >
	            
	        </LinearLayout>
	    </LinearLayout>
	    <LinearLayout 
	        android:id="@+id/contentButtonSubmit"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal"
	        >
	        <!--  <Button 
	            android:id="@+id/buttonSubmitPoll"
	            android:layout_width="wrap_content"
	            android:layout_height="@dimen/height_button_small"
	            android:text="SUBMIT"
	            android:layout_marginLeft="@dimen/padding_6dp"
	            android:layout_marginTop="@dimen/padding_3dp"
	            style="@style/ButtonOmegaSmall"/>  -->
	    </LinearLayout>
	</LinearLayout>
	
	<LinearLayout android:id="@+id/pollResultsContent"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical">
	    <TextView android:id="@+id/titlePollResult"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:padding="@dimen/padding_5dp"
	        android:text="Lorem ipsum dolor sit amet, consectetur adipisicing?"
	        android:textColor="@android:color/black"
	        android:background="@android:color/white"
	        android:inputType="textMultiLine"
	        android:textSize="@dimen/text_question_poll"/>
	    <View android:layout_width="fill_parent"
	            android:layout_height="@dimen/padding_10dp"
	            android:background="@drawable/jagged"/>  
	    <LinearLayout 
	        android:id="@+id/contentPollResults"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:gravity="center_horizontal"
	        android:padding="@dimen/padding_5dp"
	        android:orientation="vertical">
	    </LinearLayout>
	</LinearLayout>
</ViewSwitcher>