<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="6dp"
    android:gravity="center_vertical"
     >
    <LinearLayout android:id="@+id/linearRightAnnouncement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_alignParentLeft="true">
        <ImageView android:id="@+id/imageMessageAnnouncement"
        android:layout_width="30dp"
        android:layout_marginRight="5dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/noti_icon"/>
        <LinearLayout android:id="@+id/linearTextsAnnouncement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView android:id="@+id/firstTextAnnouncement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BALANCE DUE (DUE DATE): $300.00"/>
            <TextView android:id="@+id/secondTextAnnouncement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CURRENT BALANCE: $300.00"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout android:id="@+id/linearButtonPayNow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentRight="true"
        >
        <Button android:id="@+id/buttonPayNow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pay Now"
            android:textSize="12sp"
            android:padding="2dp"
            android:background="@drawable/boton_style"/>
    </LinearLayout>
</RelativeLayout>