<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:secom="http://schemas.android.com/apk/res/com.appsolution.omegafi"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/BackgroundActivity"
    tools:context=".ScheduleChargesActivity" >

    <LinearLayout 
        android:id="@+id/linearScheduleCharges"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <com.appsolution.layouts.RowInformation
            android:id="@+id/rowTotalAllCycles"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            secom:put_border_bottom="true"
            secom:name_information="Fall 2013 Total"
            secom:value_information="$510.00"
            secom:padding_row_info="8dp"/>
        <LinearLayout 
            android:id="@+id/linearCyclesCharges"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="vertical">
        </LinearLayout>
    </LinearLayout>
</ScrollView>