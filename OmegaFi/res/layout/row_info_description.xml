<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="6dp"
    android:background="@drawable/border_bottom"
    android:baselineAligned="false"
    android:weightSum="1" >
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="0.25">
        <TextView android:id="@+id/textLeftContent"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="0.75">
        <TextView android:id="@+id/textTitleCalendar"
            android:layout_width="fill_parent"
            android:textStyle="bold"
            android:textSize="@dimen/text_14sp"
            android:singleLine="false"
            android:layout_height="wrap_content"
            />
        <TextView android:id="@+id/textRightContent"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:singleLine="false"
            android:textSize="@dimen/text_14sp"
            android:textColor="@color/gray_font_welcome"
            />
        <TextView android:id="@+id/textSourceCalendar"
            android:layout_width="fill_parent"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_12sp_row_info"
            android:textColor="@android:color/darker_gray"/>
    </LinearLayout>
</LinearLayout>